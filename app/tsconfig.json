{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ESNEXT",
    "lib": ["esnext", "dom", "esnext.asynciterable"],
    "inlineSourceMap": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@api/*": ["api/*"],
      "@worker/*": ["worker/*"],
      "@whisperWorker/*": ["whisperWorker/*"],
      "@shared/*": ["shared/*"],
      "@test/*": ["test/*"]
    },
    "jsx": "react",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["api/**/*", "worker/**/*", "whisperWorker/**/*", "shared/**/*", "test/**/*", "typings/**/*"],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ]
}
